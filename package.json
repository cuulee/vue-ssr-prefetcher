{
  "name": "vue-ssr-perfetcher",
  "version": "0.1.0",
  "description": "Making Vue SSR's data prefetching more intuitive",
  "keywords": [
    "vue",
    "ssr",
    "prefetch"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "repository": "https://github.com/shuidi-fed/vue-ssr-perfetcher.git",
  "author": "HcySunYang <HcySunYang@outlook.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn lint && cross-env NODE_ENV=development rollup -c -w",
    "build": "yarn build:prod && yarn build:dev && rm -rf dist/__test__",
    "build:prod": "yarn lint && cross-env NODE_ENV=production rollup -c",
    "build:dev": "yarn lint && cross-env NODE_ENV=development rollup -c",
    "commit": "git-cz",
    "test": "yarn lint && cross-env NODE_ENV=test jest --verbose",
    "lint": "tslint --project tsconfig.json --fix",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "vue": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "conventional-changelog-cli": "^2.0.21",
    "cross-env": "^5.2.0",
    "cz-emoji": "^1.1.2",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "prettier-tslint": "^0.4.2",
    "rollup": "^1.16.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
